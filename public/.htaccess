# Apache 服务器配置
# 启用重写引擎
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 将 /nav 重定向到 /nav/
  RewriteRule ^nav$ /nav/ [R=301,L]
  
  # 如果请求的是目录，尝试查找 index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/nav/
  RewriteRule ^(.*)$ /index.html [L]
  
  # 对于 /nav/ 路径，确保返回正确的文件
  RewriteCond %{REQUEST_URI} ^/nav/$
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^nav/$ /nav/index.html [L]
</IfModule>

# 设置默认索引文件
DirectoryIndex index.html
